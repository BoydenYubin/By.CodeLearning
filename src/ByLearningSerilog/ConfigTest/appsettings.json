{
  "Serilog": {
    //设置主要的Sinks
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    //WriteTo 
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs\\test.txt",
          "outputTemplate": "{Timestamp:HH:mm} {ThreadId} [{Level}] {Message:2j}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": "1073741824",
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "ThreadId" ],
    "Properties": {
      "Application": "Sample"
    }
  }
}
